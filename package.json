{
  "name": "prayer_times_display",
  "description": "Digital display solution for mosques, showing prayer times accurately and efficiently.",
  "version": "0.5.4",
  "author": "Ismail Sacic <ismail.sacic@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nextsalah/prayer-times-display/issues"
  },
  "homepage": "https://nextsalah.com",
  "private": false,
  "scripts": {
    "dev": "vite dev",
    "start": "bun --bun run ./build/index.js",
    "build": "bunx --bun vite build",
    "preview": "vite preview",
    "migrate": "bun run ./db/migrate.ts",
    "generate": "drizzle-kit generate:sqlite --schema ./db/schema.ts",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/eslint": "8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.17",
    "better-sqlite3": "^9.4.3",
    "bun-types": "^1.0.33",
    "daisyui": "^4.7.2",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.1.2",
    "sass": "^1.72.0",
    "scss": "^0.2.4",
    "svelte": "^4.2.7",
    "svelte-adapter-bun": "^0.5.1",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vite-plugin-dynamic-import": "^1.5.0",
    "vitest": "^1.2.0"
  },
  "type": "module",
  "dependencies": {
    "drizzle-orm": "^0.30.4",
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0"
  }
}
